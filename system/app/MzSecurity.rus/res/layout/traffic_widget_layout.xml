<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	android:gravity="center_vertical" 
	android:orientation="horizontal" 
	android:id="@id/safe_widget_layout" 
	android:background="@drawable/border" 
	android:layout_width="fill_parent" 
	android:layout_height="57.0dip"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout 
	android:layout_gravity="center" 
	android:layout_width="38.0dip" 
	android:layout_height="38.0dip" 
	android:layout_marginStart="12.0dip" 
	android:layout_marginEnd="10.0dip">
        <ImageView 
		android:id="@id/screen_donut_progress" 
		android:layout_width="38.0dip" 
		android:layout_height="38.0dip" />
        <ImageView 
		android:id="@id/no_sim_donut_progress" 
		android:background="@drawable/traffic_dount_prgress_no_sim" 
		android:layout_width="36.0dip" 
		android:layout_height="36.0dip" />
    </FrameLayout>
    <LinearLayout 
	android:gravity="center_vertical" 
	android:id="@id/month_remain_linerlayout" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:layout_marginEnd="8.0dip">
