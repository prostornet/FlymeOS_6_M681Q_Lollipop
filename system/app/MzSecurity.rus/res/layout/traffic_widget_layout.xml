		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
            <TextView 
			android:textSize="14.0sp" 
			android:id="@id/no_sim_month_remain" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="--MB" 
			android:alpha="0.4" 
			style="@style/Widget.Flyme.Light.TextView.Little.Medium" />
