			android:id="@id/no_sim_day_used" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="--MB" 
			android:alpha="0.4" 
			style="@style/Widget.Flyme.Light.TextView.Little.Medium" />
            <ImageView 
			android:id="@id/day_used_value" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>